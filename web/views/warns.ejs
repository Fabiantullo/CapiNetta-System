<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>Sistema de Warns | <%= selectedGuild.name %></title>
    <link rel="stylesheet" href="/style.css?v=<%= Date.now() %>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <%- include('partials/sidebar') %>

    <div class="main-content">
        <%- include('partials/server-selector', { selectedGuild, adminGuilds }) %>

        <div class="content-wrapper">
            <!-- P√°gina Header -->
            <div style="margin-bottom: 40px;">
                <h1 style="font-size: 2.2rem; font-weight: 700; color: var(--text-primary); margin-bottom: 8px;">
                    <i class="fas fa-exclamation-triangle"></i> Sistema de Warns
                </h1>
                <p style="color: var(--text-secondary); font-size: 1rem;">
                    Gesti√≥n y consulta de advertencias del servidor
                </p>
            </div>

            <!-- Estad√≠sticas de Warns -->
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-bottom: 40px;">
                <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; padding: 24px; display: flex; gap: 16px; align-items: flex-start;">
                    <div style="font-size: 2rem; color: var(--accent-color);">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <div style="font-size: 1.8rem; font-weight: 700; color: var(--text-primary);"><%= totalUsers %></div>
                        <div style="font-size: 0.9rem; color: var(--text-secondary); margin-top: 6px;">Usuarios con Warns</div>
                    </div>
                </div>

                <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; padding: 24px; display: flex; gap: 16px; align-items: flex-start;">
                    <div style="font-size: 2rem; color: #e74c3c;">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <div>
                        <div style="font-size: 1.8rem; font-weight: 700; color: var(--text-primary);"><%= totalWarns %></div>
                        <div style="font-size: 0.9rem; color: var(--text-secondary); margin-top: 6px;">Total de Warns</div>
                    </div>
                </div>

                <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; padding: 24px; display: flex; gap: 16px; align-items: flex-start;">
                    <div style="font-size: 2rem; color: #3498db;">
                        <i class="fas fa-history"></i>
                    </div>
                    <div>
                        <div style="font-size: 1.8rem; font-weight: 700; color: var(--text-primary);"><%= recentWarns %></div>
                        <div style="font-size: 0.9rem; color: var(--text-secondary); margin-top: 6px;">Warns (√∫ltimas 24h)</div>
                    </div>
                </div>

                <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; padding: 24px; display: flex; gap: 16px; align-items: flex-start;">
                    <div style="font-size: 2rem; color: #2ecc71;">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div>
                        <div style="font-size: 1.8rem; font-weight: 700; color: var(--text-primary);"><%= avgWarns.toFixed(1) %></div>
                        <div style="font-size: 0.9rem; color: var(--text-secondary); margin-top: 6px;">Promedio por Usuario</div>
                    </div>
                </div>
            </div>

            <!-- Filtros -->
            <div style="margin-bottom: 30px;">
                <div style="display: flex; gap: 15px; margin-bottom: 20px; flex-wrap: wrap; align-items: center;">
                    <input type="text" id="searchUser" placeholder="üîç Buscar por nombre de usuario o ID..." 
                        style="flex: 1; min-width: 280px; padding: 12px 16px; background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 8px; color: var(--text-primary); font-size: 0.95rem; transition: all 0.3s;">
                    
                    <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                        <button class="btn-filter-warns active" data-filter="all">
                            <i class="fas fa-list"></i> Todos
                        </button>
                        <button class="btn-filter-warns" data-filter="high">
                            <i class="fas fa-exclamation-triangle"></i> Alto Riesgo (3+)
                        </button>
                        <button class="btn-filter-warns" data-filter="medium">
                            <i class="fas fa-exclamation"></i> Riesgo Medio (1-2)
                        </button>
                    </div>
                </div>
            </div>

            <!-- Tabla de Usuarios con Warns -->
            <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; overflow: hidden; margin-bottom: 30px;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead style="background: var(--bg-secondary);">
                        <tr>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">Usuario</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">ID</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">Warns</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">Estado</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">√öltimo Warn</th>
                            <th style="padding: 16px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="warnsTable">
                        <% if (warns.length === 0) { %>
                            <tr>
                                <td colspan="6" style="padding: 60px 20px; text-align: center; color: var(--text-secondary);">
                                    <i class="fas fa-check-circle" style="font-size: 3rem; margin-bottom: 15px; display: block; opacity: 0.5;"></i>
                                    <p style="font-size: 1.1rem;">¬°No hay usuarios con warns en este servidor!</p>
                                </td>
                            </tr>
                        <% } else { %>
                            <% warns.forEach(warn => { %>
                                <tr class="warn-row" data-warns="<%= warn.count %>" data-user="<%= warn.username.toLowerCase() %> <%= warn.userId %>" style="transition: background 0.2s; border-top: 1px solid var(--border-color);">
                                    <td style="padding: 16px; color: var(--text-primary);">
                                        <div style="display: flex; align-items: center; gap: 12px;">
                                            <img src="<%= warn.avatar %>" alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%;">
                                            <span style="font-weight: 600;"><%= warn.username %></span>
                                        </div>
                                    </td>
                                    <td style="padding: 16px; color: var(--text-primary);"><code style="background: var(--bg-secondary); padding: 4px 8px; border-radius: 4px; font-size: 0.85rem;"><%= warn.userId %></code></td>
                                    <td style="padding: 16px; color: var(--text-primary);">
                                        <span style="display: inline-block; padding: 6px 12px; border-radius: 12px; font-weight: 600; font-size: 0.85rem; <%= warn.count >= 3 ? 'background: rgba(231, 76, 60, 0.2); color: #e74c3c;' : warn.count >= 1 ? 'background: rgba(243, 156, 18, 0.2); color: #f39c12;' : 'background: rgba(46, 204, 113, 0.2); color: #2ecc71;' %>">
                                            <%= warn.count %> warn<%= warn.count !== 1 ? 's' : '' %>
                                        </span>
                                    </td>
                                    <td style="padding: 16px; color: var(--text-primary);">
                                        <% if (warn.count >= 3) { %>
                                            <span style="display: inline-block; padding: 4px 10px; border-radius: 6px; font-size: 0.8rem; font-weight: 600; background: rgba(231, 76, 60, 0.2); color: #e74c3c;">Alto Riesgo</span>
                                        <% } else if (warn.count >= 1) { %>
                                            <span style="display: inline-block; padding: 4px 10px; border-radius: 6px; font-size: 0.8rem; font-weight: 600; background: rgba(243, 156, 18, 0.2); color: #f39c12;">Moderado</span>
                                        <% } else { %>
                                            <span style="display: inline-block; padding: 4px 10px; border-radius: 6px; font-size: 0.8rem; font-weight: 600; background: rgba(46, 204, 113, 0.2); color: #2ecc71;">Normal</span>
                                        <% } %>
                                    </td>
                                    <td style="padding: 16px; color: var(--text-primary);"><%= warn.lastWarnDate || 'N/A' %></td>
                                    <td style="padding: 16px; color: var(--text-primary);">
                                        <div style="display: flex; gap: 8px;">
                                            <button onclick="viewHistory('<%= warn.userId %>', '<%= warn.username %>')" style="padding: 6px 12px; border: none; border-radius: 6px; cursor: pointer; font-size: 0.85rem; transition: all 0.3s; display: flex; align-items: center; gap: 6px; background: rgba(52, 152, 219, 0.2); color: #3498db;">
                                                <i class="fas fa-history"></i> Historial
                                            </button>
                                            <button onclick="resetWarns('<%= warn.userId %>', '<%= warn.username %>')" style="padding: 6px 12px; border: none; border-radius: 6px; cursor: pointer; font-size: 0.85rem; transition: all 0.3s; display: flex; align-items: center; gap: 6px; background: rgba(231, 76, 60, 0.2); color: #e74c3c;">
                                                <i class="fas fa-trash"></i> Resetear
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Actividad Reciente -->
            <div style="margin-bottom: 20px;">
                <h2 style="font-size: 1.4rem; font-weight: 700; color: var(--text-primary); margin: 0;">
                    <i class="fas fa-clock"></i> Actividad Reciente de Warns
                </h2>
            </div>
            <div style="background: var(--bg-card); border: 1px solid var(--border-color); border-radius: 12px; padding: 20px;">
                <% if (recentActivity.length === 0) { %>
                    <div style="text-align: center; padding: 60px 20px; color: var(--text-secondary);">
                        <i class="fas fa-inbox" style="font-size: 3rem; margin-bottom: 15px; display: block; opacity: 0.5;"></i>
                        <p style="font-size: 1.1rem;">No hay actividad reciente de warns</p>
                    </div>
                <% } else { %>
                    <% recentActivity.forEach(log => { %>
                        <div style="display: flex; gap: 15px; padding: 15px; border-bottom: 1px solid var(--border-color);">
                            <div style="width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.1rem; color: #e74c3c; flex-shrink: 0;">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div style="flex: 1;">
                                <p style="color: var(--text-primary); margin-bottom: 5px; margin-top: 0;">
                                    <strong><%= log.username %></strong> recibi√≥ su warn #<%= log.warnNumber %>
                                </p>
                                <p style="color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 5px; margin-top: 0;">
                                    Moderador: <strong><%= log.moderatorName %></strong> ‚Ä¢ 
                                    Raz√≥n: <%= log.reason || 'No especificada' %>
                                </p>
                                <span style="color: var(--text-secondary); font-size: 0.85rem;"><%= log.timestamp %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <style>
        .btn-filter-warns {
            padding: 10px 16px;
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.3s;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 6px;
            font-weight: 600;
        }

        .btn-filter-warns:hover {
            background: rgba(88, 101, 242, 0.1);
            border-color: var(--accent-color);
            color: var(--text-primary);
        }

        .btn-filter-warns.active {
            background: var(--accent-color);
            border-color: var(--accent-color);
            color: white;
        }

        #searchUser:focus {
            outline: none;
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
        }

        tbody tr:hover {
            background: var(--bg-secondary);
        }

        button:hover {
            opacity: 0.8;
        }
    </style>

    <script>
        // Sistema de filtrado
        const searchInput = document.getElementById('searchUser');
        const filterButtons = document.querySelectorAll('.btn-filter-warns');
        const tableRows = document.querySelectorAll('.warn-row');

        let currentFilter = 'all';

        // B√∫squeda en tiempo real
        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            filterRows(searchTerm, currentFilter);
        });

        // Filtros por categor√≠a
        filterButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                filterButtons.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                currentFilter = btn.dataset.filter;
                filterRows(searchInput.value.toLowerCase(), currentFilter);
            });
        });

        function filterRows(searchTerm, filter) {
            tableRows.forEach(row => {
                const userData = row.dataset.user;
                const warnCount = parseInt(row.dataset.warns);
                
                const matchesSearch = userData.includes(searchTerm);
                const matchesFilter = 
                    filter === 'all' ||
                    (filter === 'high' && warnCount >= 3) ||
                    (filter === 'medium' && warnCount >= 1 && warnCount < 3);

                row.style.display = matchesSearch && matchesFilter ? '' : 'none';
            });
        }

        // Ver historial de warns
        function viewHistory(userId, username) {
            alert(`Funci√≥n de historial de ${username} (${userId}) - Por implementar con modal`);
        }

        // Resetear warns
        function resetWarns(userId, username) {
            if (confirm(`¬øEst√°s seguro de resetear todos los warns de ${username}?`)) {
                fetch(`/warns/reset/${userId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert('Warns reseteados correctamente');
                        location.reload();
                    } else {
                        alert('Error al resetear warns');
                    }
                })
                .catch(err => alert('Error de conexi√≥n'));
            }
        }
    </script>

    <%- include('partials/sidebar-script') %>
</body>
</html>

