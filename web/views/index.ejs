<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Capi Netta | Dashboard</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- Optional Icons -->
</head>

<body>

    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="brand">CAPI NETTA RP</div>
        <ul class="nav-links">
            <li><a href="/dashboard" class="active">ðŸ“Š Dashboard</a></li>
            <li><a href="/tickets">ðŸŽ« Tickets</a></li>
            <li><a href="/logs">ðŸ“œ Logs Totales</a></li>
        </ul>

        <div class="user-info">
            <% if (user.avatar) { %>
                <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" class="user-avatar"
                    alt="Avatar">
                <% } else { %>
                    <img src="https://cdn.discordapp.com/embed/avatars/0.png" class="user-avatar" alt="Avatar">
                    <% } %>
                        <div class="user-details">
                            <div class="username">
                                <%= user.username %>
                            </div>
                            <a href="/logout" class="logout-btn">Cerrar SesiÃ³n</a>
                        </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <h1>Dashboard General</h1>

        <!-- Stats Grid -->
        <div class="grid-container">
            <div class="card highlight">
                <h3>Tickets Abiertos</h3>
                <div class="value">
                    <%= stats.ticketsOpen %>
                </div>
            </div>
            <div class="card">
                <h3>Usuarios Warned</h3>
                <div class="value">
                    <%= stats.usersWarned %>
                </div>
            </div>
            <div class="card">
                <h3>Total Warns</h3>
                <div class="value">
                    <%= stats.warnsTotal %>
                </div>
            </div>
            <div class="card">
                <h3>Miembros (Server)</h3>
                <div class="value">
                    <%= stats.online %>
                </div>
            </div>
            <div class="card">
                <h3>En Voz</h3>
                <div class="value">
                    <%= stats.voice %>
                </div>
            </div>
            <div class="card">
                <h3>Staff Activo</h3>
                <div class="value">
                    <%= stats.staff %>
                </div>
            </div>
        </div>

        <!-- Recent Logs Section -->
        <h2>ðŸ“œ Ãšltima Actividad (Logs)</h2>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fecha</th>
                        <th>Usuario</th>
                        <th>AcciÃ³n</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach(log=> { %>
                        <tr>
                            <td>#<%= log.id %>
                            </td>
                            <td>
                                <%= new Date(log.timestamp).toLocaleString() %>
                            </td>
                            <td>
                                <%= log.userId %>
                            </td>
                            <td>
                                <%= log.action %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>

    </main>

</body>

</html>